# Volume
bindsym Shift+XF86AudioLowerVolume exec  "$HOME/.local/bin/change-volume -10% && pkill -SIGRTMIN+13 i3blocks"
bindsym XF86AudioLowerVolume exec  "$HOME/.local/bin/change-volume -5% && pkill -SIGRTMIN+13 i3blocks"
bindsym XF86AudioRaiseVolume exec "$HOME/.local/bin/change-volume +5% && pkill -SIGRTMIN+13 i3blocks"
bindsym Shift+XF86AudioRaiseVolume exec "$HOME/.local/bin/change-volume +10% && pkill -SIGRTMIN+13 i3blocks"
bindsym XF86AudioMute exec "$HOME/.local/bin/change-volume 0 && pkill -SIGRTMIN+13 i3blocks"
bindsym Shift+XF86AudioMute exec "$HOME/.local/bin/toggle-mic && pkill -SIGRTMIN+10 i3blocks"
bindsym $mod+v exec "$HOME/.local/bin/vpn toggle && pkill -SIGRTMIN+11 i3blocks"

# Player
bindsym XF86AudioPlay exec "playerctl play-pause && $HOME/.local/bin/media-notif"
bindsym Shift+XF86AudioPlay exec "playerctl -p spotify play-pause && $HOME/.local/bin/media-notif spotify"
bindsym XF86AudioNext exec "playerctl next"
bindsym XF86AudioPrev exec "playerctl previous"
bindsym Shift+XF86AudioNext exec "pkill -SIGRTMIN+12 i3blocks"
bindsym Shift+XF86AudioPrev exec "pkill -SIGRTMIN+12 i3blocks"

